<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/app">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ESENCIAS"
            android:textAlignment="center"
            android:textColor="@color/verde2"
            android:textSize="20sp" />
    </LinearLayout>

    <!-- Contenedor para el Fragment -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Barra de navegación inferior -->
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/TextBoxLogin"
        android:gravity="center"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Íconos de la barra inferior -->
        <ImageButton
            android:id="@+id/botonInicio"
            android:layout_width="83dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:contentDescription="inicio"
            android:background="@drawable/ic_inicio" />

        <ImageButton
            android:id="@+id/botonAjustes"
            android:layout_width="91dp"
            android:layout_height="69dp"
            android:layout_gravity="center"
            android:contentDescription="settings"
            android:background="@drawable/ic_settings" />

        <ImageButton
            android:id="@+id/botonCesta"
            android:layout_width="69dp"
            android:layout_height="76dp"
            android:layout_gravity="center"
            android:contentDescription="cesta"
            android:background="@drawable/ic_cesta" />
    </LinearLayout>
</LinearLayout>