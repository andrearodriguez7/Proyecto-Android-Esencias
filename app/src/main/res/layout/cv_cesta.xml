<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp">

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="115dp"
        android:background="@color/verdepastel"
        android:orientation="horizontal">

        <!-- Imagen de la vela -->
        <ImageView
            android:id="@+id/imagenVela"
            android:layout_width="110dp"
            android:layout_height="115dp"

            android:scaleType="centerCrop"
            android:src="@drawable/diadelluvia" />

        <!-- Contenedor de texto y controles -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/eliminarproducto">
            </ImageView>

            <!-- Nombre de la vela -->
            <TextView
                android:id="@+id/nombreVela"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo_thambi_2"
                android:text="Mi momento de calma"
                android:textColor="@color/TituloLogin"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Contenedor con botones y precio -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Botón de restar cantidad -->
                <ImageButton
                    android:id="@+id/btnRestar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Restar cantidad"
                    android:src="@drawable/menoscesta" />

                <!-- Cantidad -->
                <TextView
                    android:id="@+id/txtCantidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <!-- Botón de sumar cantidad -->
                <ImageButton
                    android:id="@+id/btnSumar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Sumar cantidad"
                    android:src="@drawable/mascesta" />


                <!-- Botón de eliminar -->
                <ImageButton
                    android:id="@+id/btnEliminar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Eliminar vela"
                    android:src="@drawable/multiplicarcesta" />

                <!-- Precio de la vela -->
                <TextView
                    android:id="@+id/precioVela"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_thambi_2"
                    android:text="17,50€"
                    android:textColor="@color/TituloLogin"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
